<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/regDelegateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Delegate Name"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="23dp" />

    <EditText
        android:id="@+id/regSponsorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sponsor Name"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="102dp"
        app:layout_constraintTop_toBottomOf="@id/regDelegateName"/>

    <Spinner
        android:id="@+id/regPaymentStatus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="183dp"
        app:layout_constraintTop_toBottomOf="@id/regSponsorName"/>

    <Button
        android:id="@+id/regSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="234dp"
        app:layout_constraintTop_toBottomOf="@id/regPaymentStatus"/>

</android.support.constraint.ConstraintLayout>